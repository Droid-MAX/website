<dl id="<%= soc.urlname %>" class="row mb-3 border-bottom">
  <dd class="col-2 col-md-1 stage <%= soc.status %>">
    <%= link_to image_tag("stage-#{soc.status}"), '/stages-of-firmware-development', title: Soc::STATUS[soc.status.to_sym] %>
  </dd>
  <dd class="col-10 col-md-3 model">
    <%= soc.full_name %>
    <%= link_to "#", "/supported-hardware##{soc.urlname}", class: "anchor" %>
  </dd>
  <dd class="col-2 col-md-1 url">
    <%= soc.instructable? ? link_to(icon_instruction, cameras_vendor_soc_path(soc.vendor, soc), title: "Installation instructions") : icon_nothing %>
  </dd>
  <dd class="col-2 col-md-1 url">
    <%= soc.uboot_filename.blank? ? icon_nothing : link_to(icon_download, cameras_vendor_soc_path(soc.vendor, soc), title: "Installation instructions") %>
  </dd>
  <dd class="col-2 col-md-1 url">
    <%= soc.linux_filename.blank? ? icon_nothing : link_to(icon_download, cameras_vendor_soc_path(soc.vendor, soc), title: "Installation instructions") %>
  </dd>
  <dd class="col-2 col-md-1 url">
    <%= soc.toolchain_filename.blank? ? icon_nothing : link_to(icon_download, cameras_vendor_soc_path(soc.vendor, soc), title: "Installation instructions") %>
  </dd>
  <dd class="col-4 col-md-2 hex_address">
    <%= soc.load_address %>
  </dd>
  <dd class="col-12 col-md-2 status">
    <%#= image_tag soc.build_status_url unless soc.build_status_url.blank? %>
  </dd>
</dl>
