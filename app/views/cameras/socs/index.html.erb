<article class="hardware">
  <header>
    <h2>Supported Hardware by SoC</h2>
  </header>

  <ul class="nav nav-tabs mb-4">
    <li class="nav-item"><%= link_to "Full list", cameras_vendors_path, class: "nav-link#{" active" if @vendor.blank?}" %></li>
    <% Vendor.order(:name).each do |v| %>
      <li class="nav-item">
        <%= link_to v.name, cameras_vendor_path(v), class: "nav-link#{" active" if @vendor.eql?(v.name)}" %>
      </li>
    <% end %>
  </ul>

  <h3><%= @page_title %></h3>

  <p><a href="/stages-of-firmware-development">Stages of firmware development explained</a></p>

  <table class="table socs">
    <thead>
    <tr>
      <th class="name">Manufacturer / Model</th>
      <th class="url">Bootloader</th>
      <th class="url">Firmware</th>
      <th class="url">Toolchain</th>
      <th class="address">Load Address</th>
      <th class="doc">Documentation</th>
      <th class="stage">Stage</th>
      <th class="status">Build status</th>
    </tr>
    </thead>
    <tbody>
    <%= render @socs %>
    </tbody>
  </table>
</article>
