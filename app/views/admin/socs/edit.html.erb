<article class="hardware">
  <header>
    <h2>Editing SoC</h2>
  </header>

  <%= bootstrap_form_for @soc, layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-9",
                         url: admin_soc_path(@soc) do |f| %>
    <%= f.alert_message "Please fix the errors below." %>
    <div class="row row-cols-lg-2">
      <div class="col">
        <%= f.collection_select :vendor_id, Vendor.all, :id, :name %>
        <%= f.text_field :model %>
        <%= f.text_field :version %>
        <%= f.select :status, options_from_collection_for_select(Soc::STATUS, :first, :last) %>
        <%= f.text_field :load_address %>
        <%= f.text_field :sdk %>
      </div>
      <div class="col">
        <%= f.text_field :kernel %>
        <%= f.text_field :uboot_filename %>
        <%= f.text_field :linux_filename %>
        <%= f.text_area :notes %>
      </div>
    </div>
    <%= f.submit %>
  <% end %>
</article>
