<article class="devise">
  <header>
    <h2><%= t("devise.sessions.sign_in_as_#{resource_name}") %></h2>
  </header>

  <%= bootstrap_form_for resource, as: resource_name, url: session_path(resource_name) do |f| %>
    <%= render partial: '/shared/form_errors', locals: { errors: f.object.errors } if f.object&.errors.any? %>

    <div class="row">
      <div class="col-lg-8 mb-3">
        <div class="row">
          <div class="col-12 mb-3"><%= f.email_field :email, minlength: 5, autocomplete: 'username', required: true %></div>
          <div class="col-12 mb-3"><%= f.password_field :password, minlength: 6, autocomplete: 'current-password', required: true %></div>
          <div class="col-12 mb-3"><%= f.check_box :remember_me if resource.respond_to?(:remember_me=) %></div>
          <div class="col-12 mb-3"><%= f.submit t('devise.sessions.sign_in_button') %></div>
        </div>
      </div>
      <div class="col-lg-4 mb-3">
        <%= render 'devise/shared/links' %>
      </div>
    </div>
  <% end %>
</article>
