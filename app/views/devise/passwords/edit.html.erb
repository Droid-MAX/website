<article class="devise password">
  <header>
    <h2><%= t('devise.passwords.reset_password') %></h2>
  </header>

  <%= bootstrap_form_for resource, as: resource_name, url: password_path(resource_name), method: 'put' do |f| %>
    <%= f.alert_message "Please fix the errors below." %>

    <div class="row">
      <div class="col-lg-8 mb-3">
        <div class="row">
          <div class="col-12 mb-3"><%= f.password_field :password, minlength: 6, autocomplete: 'new-password', label: t('devise.passwords.new_password'), required: true %></div>
          <div class="col-12 mb-3"><%= f.password_field :password_confirmation, minlength: 6, autocomplete: 'new-password', required: true %></div>
          <div class="col-12 mb-3">
            <%= f.submit t('devise.passwords.reset_password_button') %>
            <%= f.hidden_field :reset_password_token %>
          </div>
        </div>
      </div>
      <div class="col-lg-4 mb-3">
        <%= render 'devise/shared/links' %>
      </div>
    </div>
  <% end %>
</article>
