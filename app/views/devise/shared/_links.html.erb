<div class="alert alert-secondary">
  <ul class="nav flex-column">
    <% if controller_name != 'sessions' %>
      <li class="nav-item"><%= link_to t('devise.links.sign_in'), new_session_path(resource_name), class: 'nav-link' %></li>
    <% end %>

    <% if devise_mapping.registerable? && controller_name != 'registrations' %>
      <li class="nav-item"><%= link_to t('devise.links.sign_up'), new_registration_path(resource_name), class: 'nav-link' %></li>
    <% end %>

    <% if devise_mapping.recoverable? && controller_name != 'passwords' %>
      <li class="nav-item"><%= link_to t('devise.links.reset_password'), new_password_path(resource_name), class: 'nav-link' %></li>
    <% end %>

    <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <li class="nav-item"><%= link_to t('devise.links.resend_confirmation'), new_confirmation_path(resource_name), class: 'nav-link' %></li>
    <% end %>

    <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
      <li class="nav-item"><%= link_to t('devise.links.resend_unlock'), new_unlock_path(resource_name), class: 'nav-link' %></li>
    <% end %>

    <% devise_mapping.omniauth_providers.each do |provider| %>
      <li class="nav-item"><%= link_to t('devise.links.sign_in_with', name: provider.to_s.titleize), omniauth_authorize_path(resource_name, provider), class: 'nav-link' %></li>
    <% end if devise_mapping.omniauthable? %>
  </ul>
</div>
