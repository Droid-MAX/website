<article class="devise">
  <header>
    <h2><%= t('devise.confirmations.resend_confirmation') %></h2>
  </header>

  <%= bootstrap_form_for resource, as: resource_name, url: confirmation_path(resource_name) do |f| %>
    <%= f.alert_message "Please fix the errors below." %>

    <div class="row">
      <div class="col-lg-8 mb-3">
        <div class="row">
          <div class="col-12 mb-3"><%= f.email_field :email, minlength: 5, autocomplete: 'username', required: true %></div>
          <div class="col-12 mb-3"><%= f.submit t('devise.confirmations.resend_confirmation_button') %></div>
        </div>
      </div>
      <div class="col-lg-4 mb-3">
        <%= render 'devise/shared/links' %>
      </div>
    </div>
  <% end %>
</article>
